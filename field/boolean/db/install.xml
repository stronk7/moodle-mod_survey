<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/survey/db" VERSION="20090908" COMMENT="XMLDB file for Moodle mod/survey"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="survey_boolean" COMMENT="Boolean type surveyfield">
      <FIELDS>
        <FIELD NAME="id"               TYPE="int"  LENGTH="10"    NOTNULL="true"  UNSIGNED="true"             SEQUENCE="true"                           NEXT="surveyid"/>
        <FIELD NAME="surveyid"         TYPE="int"  LENGTH="10"    NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="id"            NEXT="itemid"/>
        <FIELD NAME="itemid"           TYPE="int"  LENGTH="10"    NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="surveyid"      NEXT="content"/>

        <!-- begin of fields belonging to itembase_form.php -->
        <FIELD NAME="content"          TYPE="text" LENGTH="small" NOTNULL="false"                             SEQUENCE="false" PREVIOUS="itemid"        NEXT="contentformat"/>
        <FIELD NAME="contentformat"    TYPE="int"  LENGTH="4"     NOTNULL="false"                             SEQUENCE="false" PREVIOUS="content"       NEXT="customnumber"/>

        <FIELD NAME="customnumber"     TYPE="char" LENGTH="64"    NOTNULL="false"                             SEQUENCE="false" PREVIOUS="contentformat" NEXT="extrarow"/>
        <FIELD NAME="extrarow"         TYPE="int"  LENGTH="4"     NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="customnumber"  NEXT="extranote"/>
        <FIELD NAME="extranote"        TYPE="char" LENGTH="255"   NOTNULL="false"                             SEQUENCE="false" PREVIOUS="extrarow"      NEXT="required"/>
        <FIELD NAME="required"         TYPE="int"  LENGTH="4"     NOTNULL="false"                             SEQUENCE="false" PREVIOUS="extranote"     NEXT="variable"/>
        <!-- <FIELD NAME="hideinstructions" TYPE="int"  LENGTH="4"     NOTNULL="false"                             SEQUENCE="false" PREVIOUS="required"      NEXT="variable"/> -->
        <FIELD NAME="variable"         TYPE="char" LENGTH="64"    NOTNULL="false"                             SEQUENCE="false" PREVIOUS="required"      NEXT="indent"/>
        <FIELD NAME="indent"           TYPE="int"  LENGTH="4"     NOTNULL="false"                             SEQUENCE="false" PREVIOUS="variable"      NEXT="defaultoption"/>
        <!-- end of fields belonging to itembase_form.php -->

        <!-- begin of fields belonging to plugin_form.php of this specific plugin -->
        <FIELD NAME="defaultoption"    TYPE="int"  LENGTH="2"     NOTNULL="true"  UNSIGNED="true" DEFAULT="2" SEQUENCE="false" PREVIOUS="indent"        NEXT="defaultvalue"/>
        <FIELD NAME="defaultvalue"     TYPE="int"  LENGTH="4"     NOTNULL="false" UNSIGNED="true"             SEQUENCE="false" PREVIOUS="defaultoption" NEXT="downloadformat"/>
        <FIELD NAME="downloadformat"   TYPE="char" LENGTH="32"    NOTNULL="false"                             SEQUENCE="false" PREVIOUS="defaultvalue"  NEXT="style"/>

        <FIELD NAME="style"            TYPE="int"  LENGTH="4"     NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" PREVIOUS="downloadformat"/>
        <!-- end of fields belonging to plugin_form.php of this specific plugin -->
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="surveyid" UNIQUE="false" FIELDS="surveyid" NEXT="itemid"/>
        <INDEX NAME="itemid"   UNIQUE="true"  FIELDS="itemid"   PREVIOUS="surveyid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
