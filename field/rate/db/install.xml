<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/survey/db" VERSION="20131209" COMMENT="XMLDB file for Moodle mod/survey"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="surveyfield_rate" COMMENT="Rate type surveyfield">
      <FIELDS>
        <FIELD NAME="id"               TYPE="int"  LENGTH="10"     NOTNULL="true"  UNSIGNED="true"             SEQUENCE="true"/>
        <FIELD NAME="surveyid"         TYPE="int"  LENGTH="10"     NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="itemid"           TYPE="int"  LENGTH="10"     NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>

        <!-- begin of fields belonging to itembase_form.php -->
        <FIELD NAME="content"          TYPE="text" LENGTH="small"  NOTNULL="false"                             SEQUENCE="false"/>
        <FIELD NAME="contentformat"    TYPE="int"  LENGTH="4"      NOTNULL="false"                             SEQUENCE="false"/>

        <FIELD NAME="customnumber"     TYPE="char" LENGTH="64"     NOTNULL="false"                             SEQUENCE="false"/>
        <FIELD NAME="position"         TYPE="int"  LENGTH="4"      NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="extranote"        TYPE="char" LENGTH="255"    NOTNULL="false"                             SEQUENCE="false"/>
        <FIELD NAME="required"         TYPE="int"  LENGTH="4"      NOTNULL="false"                             SEQUENCE="false"/>
        <FIELD NAME="hideinstructions" TYPE="int"  LENGTH="4"      NOTNULL="false"                             SEQUENCE="false"/>
        <FIELD NAME="variable"         TYPE="char" LENGTH="64"     NOTNULL="false"                             SEQUENCE="false"/>
        <FIELD NAME="indent"           TYPE="int"  LENGTH="4"      NOTNULL="false"                             SEQUENCE="false"/>
        <!-- end of fields belonging to itembase_form.php -->

        <!-- begin of fields belonging to plugin_form.php of this specific plugin -->
        <FIELD NAME="options"          TYPE="text" LENGTH="medium" NOTNULL="true"                              SEQUENCE="false"/>
        <FIELD NAME="rates"            TYPE="char" LENGTH="255"    NOTNULL="true"                              SEQUENCE="false"/>
        <FIELD NAME="defaultoption"    TYPE="int"  LENGTH="2"      NOTNULL="true"  UNSIGNED="true" DEFAULT="2" SEQUENCE="false"/>
        <FIELD NAME="defaultvalue"     TYPE="char" LENGTH="255"    NOTNULL="false"                             SEQUENCE="false"/>
        <FIELD NAME="downloadformat"   TYPE="int"  LENGTH="4"      NOTNULL="false" UNSIGNED="true"             SEQUENCE="false"/>

        <FIELD NAME="style"            TYPE="int"  LENGTH="4"      NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="differentrates"   TYPE="int"  LENGTH="4"      NOTNULL="true"  UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
        <!-- end of fields belonging to plugin_form.php of this specific plugin -->
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="surveyid" TYPE="foreign" FIELDS="surveyid" REFTABLE="survey" REFFIELDS="id"/>
        <KEY NAME="itemid" TYPE="foreign-unique" FIELDS="itemid" REFTABLE="survey_item" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
